//    div((nuEff*dev2(T(grad(U)))))    Gauss linear;
// }

// take from pdf
laplacianSchemes
{
    default             Gauss linear limited corrected 0.333;
}

// take from laplacianSchemes
interpolationSchemes
{
    default             linear limited;
}

// take from laplacianSchemes
snGradSchemes
{
    default             limited corrected 0.333;
}

fluxRequired
{
    default             no;
    p;
}


