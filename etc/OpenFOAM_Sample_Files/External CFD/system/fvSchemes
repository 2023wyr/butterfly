FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default             steadyState;
}

// use pdf file to update this
gradSchemes
{
    default             Gauss linear;
	grad(U)				Gauss linear;
}

//low quality
divSchemes
{
    div(phi,U)          bounded Gauss upwind grad(U); 
    div(phi,epsilon)    bounded Gauss upwind default;
    div(phi,k)          bounded Gauss upwind default;
	div((nuEff*dev2(T(grad(U)))))    Gauss linear;
}

// high quality
