FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    room
    {
        type            kqRWallFunction;
        value           uniform 0.1;
    }
    
	west_window //inlet
    {
        type            fixedValue;
		value			uniform 0.1;
    }
    east_window
    {
        type            zeroGradient;
    }
}


